{
  "name": "weather-app-react",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://carlosbermejop.github.io/weather-app-react/",
  "dependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.8",
    "@wdio/cli": "^7.5.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosbermejop/weather-app-react.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "jest": "react-scripts test --watchAll=false",
    "e2e": "yarn wdio wdio.conf.js",
    "e2e:local": "yarn wdio wdio.conf.js -- --baseUrl=http://localhost:3000",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@wdio/allure-reporter": "^7.5.3",
    "@wdio/jasmine-framework": "^7.5.3",
    "@wdio/local-runner": "^7.5.4",
    "@wdio/spec-reporter": "^7.5.3",
    "chromedriver": "^90.0.0",
    "gh-pages": "^3.1.0",
    "wdio-chromedriver-service": "^7.0.0"
  }
